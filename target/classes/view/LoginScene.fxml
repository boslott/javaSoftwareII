<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.boslott.controller.LoginSceneController">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="900.0">
         <children>
            <Label fx:id="mainTitleLabel" text="LOGIN TO APPLICATION">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
      <VBox alignment="CENTER" layoutY="100.0" prefHeight="400.0" prefWidth="450.0">
         <children>
            <Label fx:id="userNameLabel" text="USER NAME" />
            <TextField fx:id="useridField" maxWidth="200.0" prefWidth="200.0" />
            <Label fx:id="useridErrorLabel" text="userid_error_messages">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="passwordLabel" text="PASSWORD">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="passwordField" maxWidth="200.0" prefWidth="200.0" />
            <Label fx:id="passwordErrorLabel" layoutY="100.0" text="password_error_messages">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#login" text="LOGIN">
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
      <VBox alignment="CENTER" layoutX="450.0" layoutY="100.0" prefHeight="400.0" prefWidth="450.0">
         <children>
            <Label fx:id="welcomeLabel" text="Hello and Welcome!">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="30.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="timeZoneLabel" text="Your Current Time Zone Is:">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="localeLabel" text="Locale">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
      <HBox alignment="CENTER_LEFT" layoutY="500.0" prefHeight="100.0" prefWidth="900.0">
         <children>
            <Button fx:id="exitAppButton" mnemonicParsing="false" onAction="#exitApp" text="EXIT APP">
               <HBox.margin>
                  <Insets left="30.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
